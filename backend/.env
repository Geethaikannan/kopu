# Environment Variables for PC Activity Monitoring Backend

# MongoDB Connection String
MONGO_URI=mongodb://localhost:27017/pc-activity-monitoring

# JWT Secret Key (Change this to a strong, random secret in production)
JWT_SECRET=your_super_secret_jwt_key_here

# Server Port
PORT=5000

# Risk Threshold for Auto-Alert (e.g., 5)
RISK_THRESHOLD=5
